<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background_image_one_signin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/nama"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Diva Juan Nur Taqarrub"
            android:paddingLeft="15dp"
            android:textColorHint="#74716A" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="A11.2020.12560"
            android:paddingLeft="15dp"
            android:textColorHint="#74716A" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="15dp"
            android:src="@drawable/fotoku" />

        <TextView
            android:id="@+id/hobi"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Hobi bermain game dan rebahan"
            android:paddingLeft="15dp"
            android:textColorHint="#74716A" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Seorang mahasiswa yang ingin memiliki banyak asset dan kekayaan"
            android:paddingLeft="15dp"
            android:textColorHint="#74716A" />

        <Button
            android:id="@+id/alamat"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgbtn"
            android:text="Alamat Rumah"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/no_tlp"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgbtn"
            android:text="Nomer Telepon"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgbtn"
            android:text="Email"
            android:textAllCaps="false" />




    </LinearLayout>

</LinearLayout>

